#!/sbin/runscript

# AjaxTerm Gentoo script, 08 May 2006 Mark Gillespie 

DAEMON=/bin/ajaxterm.py
PORT=7080 
PIDFILE=/var/run/ajaxterm.pid 

depend()
{
    need net
}

start()
{
    ebegin "Starting AjaxTerm on port $PORT"
    start-stop-daemon --start --pidfile $PIDFILE --make-pidfile --background --exec $DAEMON -- --port=$PORT
    eend $?
} 

stop()
{
    ebegin "Stopping AjaxTerm"
    start-stop-daemon  --stop --pidfile $PIDFILE 
    rm -f $PIDFILE 
    eend $?
}
